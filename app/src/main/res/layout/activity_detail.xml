<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_inference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="21dp"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/origin_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <TextView
        android:id="@+id/place_of_origin"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:text="@string/detail_place_of_origin_label"
        android:textAlignment="inherit"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/origin_tv"
        app:layout_constraintEnd_toStartOf="@+id/origin_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_marginTop="84dp"
        android:textAlignment="inherit"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/place_of_origin"
        app:layout_constraintTop_toBottomOf="@+id/image_iv" />

    <TextView
        android:id="@+id/also_known_as_label"
        android:layout_width="243dp"
        android:layout_height="52dp"
        android:paddingLeft="20dp"
        android:text="@string/detail_also_known_as_label"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/also_known_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/also_known_tv"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="358dp"
        android:layout_height="76dp"
        android:layout_alignBaseline="@+id/origin_tv"
        android:lines="3"
        android:maxLines="3"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/also_known_as_label"
        app:layout_constraintTop_toBottomOf="@+id/origin_tv" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="244dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:paddingLeft="20dp"
        android:text="@string/detail_description_label"
        android:textAlignment="inherit"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/also_known_as_label"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/SCROLLER_DESC"
        android:layout_width="344dp"
        android:layout_height="178dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/description_label"
        app:layout_constraintTop_toBottomOf="@+id/also_known_tv">


        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/description_label"
            app:layout_constraintTop_toBottomOf="@+id/also_known_tv" />
    </ScrollView>

    <TextView
        android:id="@+id/ingredients_label"
        android:layout_width="239dp"
        android:layout_height="52dp"
        android:layout_marginTop="172dp"
        android:paddingLeft="20dp"
        android:text="@string/detail_ingredients_label"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/description_label"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="355dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:lines="3"
        android:maxLines="3"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingredients_label"
        app:layout_constraintTop_toBottomOf="@+id/SCROLLER_DESC" />

</android.support.constraint.ConstraintLayout>